@model AppAgendamentos.ViewModels.CompanyViewModel
@{
    ViewData["Title"] = "Create Company";
}
<h1>@ViewData["Title"]</h1>
<h4>Company image will be generated automatically by us :)</h4>

<form asp-action="Create" method="post">
    <div class="row">
<div class="col-md-4">
    @Html.LabelFor(c => c.Name)
    @Html.TextBoxFor(c => c.Name, new {@class = "form-control"})
</div>
<div class="col-md-4">
    @Html.LabelFor(c => c.CategoryId)
    @Html.DropDownListFor(c => c.CategoryId, Model.Categories, new {@class = "form-control"})
</div>
    </div>
    </br>
    <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Back</a>
    <input type="submit" value="Create" class="btn btn-success">
</form>

