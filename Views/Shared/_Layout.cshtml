<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Scheduler</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppAgendamentos.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AppAgendamentos</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
            <form class="form-inline my-2 my-lg-0" style="margin-right: 10%">
                <input class="form-control mr-sm-2" type="search" id="searchBarrr" placeholder="Search"
                    aria-label="Search" style="width: 450px;">
                <button style="display: none;" class="btn btn-outline-dark my-2 my-sm-0" type="submit">Search</button>
            </form>
            <div style="display: flex; justify-content: end">
                <a asp-action="Create" asp-controller="Scheduling" class="btn btn-dark" style="margin-right: 10%">
                    Create Appointment
                </a>
                <a asp-action="Create" asp-controller="Company" class="btn btn-dark" style="margin-right: 10%">
                    Create Company
                </a>
                <li class="nav-item dropdown" style="text-align: center;">
                    <img src="~/images/user.png" alt="user" class="rounded-circle" href="#" id="navbarDropdown"
                        style="width: 40px; height: 40px; margin-right: 10px" role="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        @User.Identity.Name
                    </img>
                    <ul class="dropdown-menu dropdown-menu-start" aria-labelledby="navbarDropdown">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a class="dropdown-item" asp-action="Index" asp-controller="Account">Account</a></li>
                            <li><a class="dropdown-item" asp-action="Index" asp-controller="Scheduling">Appointments</a>
                            </li>
                            <li><a class="dropdown-item" asp-action="MyCompanies" asp-controller="Account">My Companies</a></li>
                            <div class="dropdown-divider"></div>
                            <li><a class="dropdown-item" asp-action="Logout" asp-controller="Account">Sair</a></li>
                        }
                        else
                        {
                            <li><a class="dropdown-item" asp-action="Login" asp-controller="Account">Login</a></li>
                            <li><a class="dropdown-item" asp-action="Register" asp-controller="Account">Register</a></li>
                        }
                    </ul>
                </li>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    @foreach (var modelState in ViewData.ModelState.Values)
                    {
                        foreach (var error in modelState.Errors)
                        {
                            <span>@error.ErrorMessage</span>
                        }
                    }
                </div>
            }
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["Message"]
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Scheduler - <a asp-area="" asp-controller="Home" asp-action="Home">Home</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>